{% extends 'base.html.twig' %}

{% block title %}City: {{ city.name }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="card-box">
            <div class="card-box__header">
                <div class="card-card-box__header__title">
                    <h4>{{ city.name }} </h4>
                </div>
            </div>
            <div class="card-box__content">
                <!-- item -->
                <div class="card-box__content__item">
                    <div class="card-box__content__item__bottom">
                        <div class="left">
                            <span>Id:</span>
                            <p>{{ city.id|default('') }}</p>
                        </div>
                        <div class="right">
                            <span>Name:</span>
                            <p>{{ city.name|default('') }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
            </div>
        </div>
    </div>
{% endblock %}
